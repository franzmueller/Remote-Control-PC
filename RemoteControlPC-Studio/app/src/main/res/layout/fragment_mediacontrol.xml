<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/volDownButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_volume_down_black_24dp"/>
        <Button
            android:id="@+id/muteButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_volume_off_black_24dp"/>
        <Button
            android:id="@+id/volUpButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_volume_up_black_24dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/previousButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_skip_previous_black_24dp"/>
        <Button
            android:id="@+id/playButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_play_arrow_black_24dp"/>
        <Button
            android:id="@+id/stopButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_stop_black_24dp"/>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_skip_next_black_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/spaceButton"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:text="@string/space_key" />
    </LinearLayout>

</LinearLayout>
